# ──────────────────────────────
# 🌍 Environment
# ──────────────────────────────
# Set your environment type
ENVIRONMENT=sandbox   # or "live"

# ──────────────────────────────
# 🔑 Supabase Database
# ──────────────────────────────
SUPABASE_DB_URL=postgresql://YOUR_USER:YOUR_PASSWORD@YOUR_HOST.supabase.co:5432/postgres
SUPABASE_DB_HOST=YOUR_HOST.supabase.co
SUPABASE_DB_USER=YOUR_USER
SUPABASE_DB_PASS=YOUR_PASSWORD
SUPABASE_DB_NAME=postgres

# ──────────────────────────────
# 💳 FastSpring Payments
# ──────────────────────────────
FASTSPRING_API_KEY=your_fastspring_api_key_here
FASTSPRING_WEBHOOK_SECRET=your_fastspring_webhook_secret_here
FASTSPRING_STORE_ID=your_store_id_here
FASTSPRING_PRODUCT_ID_CORE=atlas-core-monthly
FASTSPRING_PRODUCT_ID_STUDIO=atlas-studio-monthly

# ──────────────────────────────
# 📢 Notifications (Optional)
# ──────────────────────────────
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
CICD_ALERT_URL=your_cicd_alert_url_here
CICD_ALERT_TOKEN=your_cicd_alert_token_here

# ──────────────────────────────
# ⚙️ App Settings
# ──────────────────────────────
APP_ENV=development
APP_PORT=3000
