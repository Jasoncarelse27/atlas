# =============================================================================
# ATLAS AI - ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL (replace with actual values)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
VITE_BACKEND_URL=http://localhost:8000
PORT=8000
NODE_ENV=development

# =============================================================================
# AI MODEL API KEYS
# =============================================================================
# Anthropic (Claude) - Required for Core/Studio tiers
ANTHROPIC_API_KEY=your-claude-api-key-here

# Groq - Required for Free tier fallback
GROQ_API_KEY=your-groq-api-key-here

# Opus - Optional for Studio tier (highest quality)
OPUS_API_KEY=your-opus-api-key-here

# =============================================================================
# MAILERLITE INTEGRATION
# =============================================================================
# JWT token for MailerLite API access
MAILERLITE_API_KEY=your-mailerlite-jwt-token-here

# =============================================================================
# PADDLE SUBSCRIPTION INTEGRATION
# =============================================================================
# Paddle API keys for subscription management
PADDLE_API_KEY=your-paddle-api-key
PADDLE_PUBLIC_KEY=your-paddle-public-key

# =============================================================================
# LEGACY EXPO COMPATIBILITY
# =============================================================================
# These are kept for backward compatibility with mobile app
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Rate limiting (optional - has defaults)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX=30

# CORS origins (optional - has defaults)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment these for local development overrides
# VITE_SUPABASE_URL=http://localhost:54321
# VITE_BACKEND_URL=http://localhost:8000
