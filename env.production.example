# ==========================
# ATLAS PRODUCTION CONFIG
# ==========================
# This file is used for Railway deployment
# Copy this to .env.production and fill in your values
# Railway will automatically load .env.production in production

# --- Supabase ---
SUPABASE_URL=https://YOUR-PROJECT-ID.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# --- FastSpring (Live Production) ---
VITE_FASTSPRING_ENVIRONMENT=live
VITE_FASTSPRING_STORE_ID=your-store-id-here
VITE_FASTSPRING_API_KEY=your-api-key-here
VITE_FASTSPRING_WEBHOOK_SECRET=your-webhook-secret-here
VITE_FASTSPRING_CORE_PRODUCT_ID=atlas-core-monthly
VITE_FASTSPRING_STUDIO_PRODUCT_ID=atlas-studio-monthly

# --- Atlas App ---
PORT=3000
NODE_ENV=production

# --- Frontend ---
VITE_API_URL=https://atlas-production-14090287.up.railway.app
VITE_SUPABASE_URL=https://YOUR-PROJECT-ID.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# --- Model Configuration ---
DEFAULT_MODEL=claude-3-haiku-20240307
FREE_TIER_LIMIT=15

# --- Monitoring ---
ENABLE_LOGGING=true
LOG_LEVEL=info

# --- Debug Options ---
VITE_DEBUG_AUTH=0

# --- Sentry Error Tracking ---
SENTRY_DSN=https://YOUR-SENTRY-DSN@sentry.io/PROJECT-ID
VITE_SENTRY_DSN=https://YOUR-SENTRY-DSN@sentry.io/PROJECT-ID
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0

# --- Redis Caching ---
REDIS_URL=redis://localhost:6379
# For production Redis (e.g., Redis Cloud, AWS ElastiCache)
# REDIS_URL=redis://username:password@redis-host:6379