{
  "name": "atlas-backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "backend/server.mjs",
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "npm run dev:checklist",
    "dev": "nodemon backend/server.mjs",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "staging:build": "NODE_ENV=staging vite build",
    "staging:preview": "NODE_ENV=staging vite preview",
    "staging:test": "NODE_ENV=staging npm run test",
    "staging:e2e": "NODE_ENV=staging npm run test:e2e",
    "check-all": "npm run typecheck && npm run lint && npm run build && npm run test",
    "postinstall": "echo 'Backend dependencies installed successfully'",
    "health": "curl http://localhost:$PORT/healthz || echo 'Health check failed'",
    "dev:web": "vite",
    "dev:web:safe": "npm run dev:web || echo '‚ÑπÔ∏è Web likely already running ‚Äî skipping.'",
    "dev:mobile": "bash scripts/expo-mobile.sh",
    "dev:mobile:safe": "npm run dev:mobile || echo '‚ÑπÔ∏è Expo likely already running ‚Äî skipping.'",
    "dev:all": "concurrently -n WEB,MOBILE -c auto \"npm:dev:web:safe\" \"npm:dev:mobile:safe\"",
    "dev:doctor": "node scripts/dev-doctor.cjs",
    "dev:checklist": "echo 'üìã Atlas Development Checklist' && echo '' && echo '‚úÖ Environment: .env file present' && echo '‚úÖ Web Project: Vite detected at root' && echo '‚úÖ Mobile Project: Expo detected in atlas-mobile/' && echo '' && echo 'üöÄ Quick Start Commands:' && echo '  npm run dev:web     # Start web frontend (Vite)' && echo '  npm run dev:mobile  # Start mobile app (Expo)' && echo '  npm run dev:all     # Start both simultaneously' && echo '' && echo 'üîß Diagnostic Commands:' && echo '  npm run dev:doctor  # Check ports and project structure' && echo '  npm run audit:components  # Component architecture audit' && echo '' && echo 'üí° Tip: Use separate terminals for web and mobile development'",
    "audit:components": "node scripts/audit-components.cjs",
    "backup:src": "bash scripts/auto-backup.sh",
    "sanitize:history": "echo '‚ö†Ô∏è Manual review required - check for .env commits'",
    "metro:fix": "MOBILE_DIR=atlas-mobile bash scripts/fix-metro.sh",
    "ios:clean": "scripts/ios-clean.sh",
    "mobile:clean": "scripts/mobile-clean.sh",
    "prepare": "husky",
    "check:types": "tsc -p tsconfig.json --noEmit",
    "check:lint": "eslint .",
    "check:test": "vitest --run",
    "check:fast": "npm run check:types && npm run check:test",
    "check:all": "npm ci && npm run check:types && npm run check:lint && npm run build && npm run check:test"
  },
  "dependencies": {
    "@sentry/node": "^10.10.0",
    "@sentry/react": "^10.10.0",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/supabase-js": "^2.50.5",
    "@tanstack/react-query": "^5.87.1",
    "axios": "^1.11.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dexie": "^4.2.0",
    "dexie-react-hooks": "^4.2.0",
    "dotenv": "^17.2.0",
    "expo": "^53.0.22",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "framer-motion": "^12.23.12",
    "helmet": "^8.1.0",
    "lucide-react": "^0.542.0",
    "morgan": "^1.10.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.8.2",
    "react-window": "^2.1.0",
    "uuid": "^11.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.55.0",
    "@sentry/browser": "^10.10.0",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fake-indexeddb": "^6.0.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.1.6",
    "msw": "^2.11.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "supabase": "^2.40.7",
    "tailwindcss": "^3.4.0",
    "terser": "^5.43.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.3",
    "vitest": "^2.1.9",
    "why-did-you-render": "^1.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=1000",
      "git add"
    ]
  }
}
