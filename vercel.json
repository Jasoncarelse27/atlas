{
  "headers": [
    {
      // Force HTML pages (/, /chat, etc.) to never be cached
      "source": "/(.*)",
      "has": [
        { "type": "header", "key": "Accept", "value": "text/html" }
      ],
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    },
    {
      // Keep assets aggressively cached for 1 year (hashed filenames)
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      // Ensure index.html (root) always refreshes
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0, must-revalidate" }
      ]
    }
  ]
}
