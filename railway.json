{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "rm -rf dist node_modules/.vite && npm install --legacy-peer-deps && npm run build && ls -la dist/assets/index-*.js && echo 'Build verification complete'",
    "nixpacksPlan": {
      "providers": ["node"],
      "variables": {
        "NODE_VERSION": "22.12.0",
        "NPM_CONFIG_PRODUCTION": "false"
      }
    }
  },
  "deploy": {
    "startCommand": "npm run backend",
    "healthcheckPath": "/healthz",
    "healthcheckTimeout": 30000,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "healthcheck": {
    "path": "/healthz",
    "timeout": 30,
    "interval": 10
  }
}
