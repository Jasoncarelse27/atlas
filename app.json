{
  "expo": {
    "name": "Atlas",
    "slug": "atlas",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./public/vite.svg",
    "userInterfaceStyle": "automatic",
    "entryPoint": "./main.js",
    "splash": {
      "image": "./public/vite.svg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Atlas needs your microphone to transcribe your voice and provide audio responses."
      },
      "bundleIdentifier": "com.jason-carelse.atlas"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./public/vite.svg",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./public/vite.svg"
    }
  }
}
